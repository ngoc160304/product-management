extend ../../layouts/default.pug
block main 
    if(role.permissions.includes("roles_permissions"))
        h1(class="fs-4") Phân quyền
        if(records.length)
            div(data-records=records)
            .text-end.mb-3.me-4
                button(
                    type="button"
                    class="btn btn-primary"
                    button-submit
                ) Cập nhật
            table.table.table-sm.table-hover.table-striped(
                table-roles-permissions
            )
                thead
                    tr
                        th(scope='col') Chức năng
                        each item in records
                            th(scope='col' class="text-center") #{item.title}
                tbody
                    tr(data-name="id" class="d-none")
                        td
                        each item in records
                            td(class="text-center")
                                input(type="text" name="id" value=item.id)
                    tr
                        td(colspan=3)
                            b Danh sách sản phẩm 
                        
                    tr(data-name="products_view")
                        td Xem 
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="products_create")
                        td Thêm mới
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="products_edit")
                        td Chỉnh sửa
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="products_delete")
                        td Xóa
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr
                        td(colspan=3)
                            b Danh mục sản phẩm
                        
                    tr(data-name="products-category_view")
                        td Xem 
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="products-category_create")
                        td Thêm mới
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="products-category_edit")
                        td Chỉnh sửa
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="products-category_delete")
                        td Xóa
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr
                        td(colspan=3)
                            b Nhóm quyền
                        
                    tr(data-name="roles_view")
                        td Xem
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="roles_create")
                        td Thêm mới
                        each item in records 
                            td(class="text-center")
                                input(class="form-check-input" type="checkbox")
                    tr(data-name="roles_edit")
