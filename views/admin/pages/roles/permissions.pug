                                input(class="form-check-input" type="checkbox")
            form(
                action=`${prefixAdmin}/roles/permissions?_method=PATCH`
                method="POST"
                form-change-pemissions 
                class="d-none"
            )
                input(
                    type="text"
                    name="permissions"
                    input-permissions
                )
        else 
            .text-end.mb-3.me-4
                a(
                    type="button"
                    class="btn btn-primary"
                    href=`${prefixAdmin}/roles/create`
                ) Thêm mới danh mục
        script(src="/admin/js/roles.js") 