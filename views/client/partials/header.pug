header.header
    .container-fluid
        .row.justify-content-between.align-items-center
            .col-2
                .inner-logo
                    a(href="/")
                        img(
                            src="/images/logo.png"
                            alt="logo"
                            class="inner-img"
                        )
            .col-5
                form(
                    action="/search"
                    method="GET"
                    class="input-group"
                )
                    input(
                        type="text"
                        class="form-control"
                        name="keyword"
                        placeholder="Nhập từ khóa tìm kiếm..."
                        required
                    )
                    input(
                        type="submit"
                        value="Tìm kiếm"
                        class="btn btn-primary"
                        
                    )
            .col-4.d-flex.align-items-center.justify-content-end
                .inner-menu
                    ul
                        li
                            a(href="/" class="inner-home" link-activce)
                                <i class="fa-solid fa-house"></i>
                                span Trang chủ
                        if(infoUser)
                            li(class="inner-user-info")
                                a(href="/user/info" link-activce)
                                    <i class="fa-regular fa-user"></i>
                                    .inner-name #{infoUser.fullname}
                                    ul 
                                        li 
                                            a(href="/user/info" link-activce) Tài khoản của tôi
                                        li
                                            a(href="/user/orders" link-activce) Đơn mua
                                        li
                                            a(href="/user/logout" link-activce) Đăng xuất
                            li
                                a(href="/cart" class="inner-cart" link-activce)
                                    <i class="fa-solid fa-cart-plus"></i>
                                    span #{miniCart}
                        else 
                            li
                                a(href="/user/login" class="ms-0" link-activce) Đăng nhập
                            li
                                a(href="/user/register" class="ms-0" link-activce) Đăng ký
                        